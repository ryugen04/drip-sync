<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Health Connect 権限 -->
    <uses-permission android:name="android.permission.health.READ_HYDRATION" />
    <uses-permission android:name="android.permission.health.WRITE_HYDRATION" />

    <!-- Wear OS 連携用 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- 通知権限（Android 13以降） -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- 再起動後のリマインダー復旧用 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name=".DripSyncApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DripSync">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.DripSync">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Health Connect の権限リクエスト用 Activity -->
        <activity
            android:name="androidx.health.connect.client.PermissionController$RequestPermissionActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="androidx.health.ACTION_SHOW_PERMISSIONS_RATIONALE" />
            </intent-filter>
        </activity>

        <!-- Health Connect プライバシーポリシー（必須） -->
        <activity-alias
            android:name="ViewPermissionUsageActivity"
            android:exported="true"
            android:permission="android.permission.START_VIEW_PERMISSION_USAGE"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW_PERMISSION_USAGE" />
                <category android:name="android.intent.category.HEALTH_PERMISSIONS" />
            </intent-filter>
        </activity-alias>

        <!-- Data Layer Listener Service for Wear OS sync -->
        <service
            android:name=".sync.DataLayerListenerService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.DATA_CHANGED" />
                <data
                    android:host="*"
                    android:pathPrefix="/hydration/record"
                    android:scheme="wear" />
                <data
                    android:host="*"
                    android:pathPrefix="/hydration/delete"
                    android:scheme="wear" />
                <data
                    android:host="*"
                    android:path="/preferences"
                    android:scheme="wear" />
            </intent-filter>
        </service>

        <!-- WorkManager on-demand initialization -->
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <meta-data
                android:name="androidx.work.WorkManagerInitializer"
                android:value="androidx.startup"
                tools:node="remove" />
        </provider>

        <!-- 再起動後にリマインダーを復旧するReceiver -->
        <receiver
            android:name=".reminder.BootCompletedReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

    <!-- Health Connect が利用可能なデバイスのみをターゲット -->
    <queries>
        <package android:name="com.google.android.apps.healthdata" />
    </queries>

</manifest>
